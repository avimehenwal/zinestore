{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve:debug": "yarn build | firebase emulators:start --only functions,firestore --inspect-functions",
    "serve": "yarn build | firebase emulators:start --only functions,firestore",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "build": "./node_modules/.bin/tslint --project tsconfig.json && ./node_modules/.bin/tsc --watch --preserveWatchOutput"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "firebase-admin": "^9.1.1",
    "firebase-functions": "^3.10.0",
    "stripe": "^8.89.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/axios": "^0.14.0",
    "@types/dotenv": "^8.2.0",
    "@types/firebase": "^3.2.1",
    "@types/jest": "^26.0.10",
    "@types/stripe": "^7.13.24",
    "babel-jest": "^26.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.7.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.2.1",
    "jest": "^26.4.1",
    "ts-jest": "^26.2.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "private": true
}
